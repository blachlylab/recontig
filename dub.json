	"dependencies": {
		"dhtslib": {
			"repository": "git+https://github.com/blachlylab/dhtslib.git",
			"version": "b3fcf27aefff939e111ccb0f18d453c15a51451c"
		}
	},
	"description": "Uses dpryan79's chromosome mappings to convert contig names",
	"license": "MIT",
	"name": "recontig",
	"preBuildCommands": ["./version.sh"],
	"configurations": [
		{
			"name": "standard",
			"targetType": "executable"
		},
		{
			"name":"static-alpine",
			"targetType": "executable",
			"dflags-ldc": [
				"-link-defaultlib-shared=false",
				"-static",
				"--linker=gold",
				"-L-lz",
				"-L-lbz2",
				"-L-ldeflate",
				"-L-llzma",
				"-L-lcurl", 
				"-L-lssl", 
				"-L-lssh2", 
				"-L-lcrypto"
			],
			"sourceFiles": ["/usr/local/lib/mimalloc-2.0/mimalloc.o"]
		},
		{
			"name": "pyd",
			"targetType": "executable",
			"versions": ["usepyd"],
			"dependencies": {
				"pyd": "~>0.14.1"
			}
		}
	]
}